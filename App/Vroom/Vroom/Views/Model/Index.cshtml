@model IEnumerable<Vroom.Models.Model>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Models of vehicles</h2>
    </div>
    <div class="col-6 float-end">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-motorcycle"></i> &nbsp; Add New Model</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>@Html.DisplayNameFor(m => m.make)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th></th>
            </tr>
            @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(m => item.make.Name)</td>
                <td>@Html.DisplayFor(m => item.Name)</td>
               <partial name="_TableButtonPartial" model="item.Id" />
            </tr>
            }
        </table>
    </div>
</div>

