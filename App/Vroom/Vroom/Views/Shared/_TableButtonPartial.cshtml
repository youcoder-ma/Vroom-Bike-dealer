<td class="text-right">
    <div class="btn-group" role="group">
        <form method="post" action="Edit">
            <button type="submit" class="btn btn-primary text-right" asp-action="Edit" asp-route-id="@Model"><i class="fas fa-edit"></i></button>
        </form>
        <form method="post" action="Delete">
            <button onclick="if (!confirm('Are you sure you want to delete this item ?')){return false}" type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@Model"><i class="fas fa-trash-alt"></i></button>
        </form>
    </div>
</td>